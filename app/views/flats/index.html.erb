<h1 class="text-xl font-bold">Flats</h1>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-3">
  <% @flats.each do |flat| %>
    <%= link_to flat_path(id: flat["id"]) do %>
      <div class="shadow border rounded p-2">
        <h2 class="text-base"><%= flat["name"] %></h2>
        <%= image_tag flat["imageUrl"], alt: flat["name"], class: "h-48 w-48 object-cover" %>
      </div>
    <% end %>
  <% end %>
